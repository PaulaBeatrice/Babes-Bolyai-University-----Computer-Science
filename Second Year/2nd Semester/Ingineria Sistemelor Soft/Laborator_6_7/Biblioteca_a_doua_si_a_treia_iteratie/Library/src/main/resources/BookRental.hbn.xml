<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="domain">
    <class name="BookRental" table="BOOK_RENTALS">
        <id name="id" column="id"> <generator class="increment"/> </id>
        <property name="client" column="client"/>
        <property name="book" column="book"/>
        <property name="returned" column="returned"/>
        <property name="days" column="days"/>
    </class>
</hibernate-mapping>